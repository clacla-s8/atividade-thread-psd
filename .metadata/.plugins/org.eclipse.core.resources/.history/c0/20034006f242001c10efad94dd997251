package main;



import java.util.ArrayList;
import java.util.List;

import controller.Questao02Controller;

import view.Questao02View;

public class PrincipalQuestao02 {

	public static void main(String[] args) {
//		Questao02View  q2= new Questao02View();
//		q2.telaProjeto();
		
		//Questao02Controller q2Controler = new Questao02Controller(q2);
		
		List<Integer> numeros = new ArrayList<Integer>();

		for(int i = 0; i <= 20; i++){
			numeros.add(i);
		}

		                int contador;
				int numero = 0;
				for (Integer i : numeros) {
					contador = 0;

				       for (int u = 1; u <= i; u++) {
						if (i % u == 0) {
							contador++;
							numero = u;
						}
					}
					
					if (contador == 2) {
						System.out.println("O Número: " + numero + " é primo e seus primos são: 1 e "+ numero);  
					}		
				}
		
	}
}
