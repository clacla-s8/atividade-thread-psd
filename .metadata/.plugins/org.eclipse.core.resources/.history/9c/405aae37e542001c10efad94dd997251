package view;

import java.awt.Container;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;

public class questao01 extends JFrame{

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	
	 private void testaJFormattedTextField() {
		 
		 Container janela = getContentPane();
	        

         //Define os rótulos dos botões
         JLabel labelValor = new JLabel("Digite os segundos para deixar a aplicação bloqueada: ");
         
       JTextField campoValor = new JTextField();
       
       JButton botaoConfirmar = new JButton();
       
       janela.add(labelValor);
       janela.add(campoValor);
       janela.add(botaoConfirmar);
       setSize(400, 250);
       setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
       setVisible(true);
	 }
	
         
	
	

}
