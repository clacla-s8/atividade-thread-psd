package clarice_santos_questao03Modificada;

public class Questao03ThreadModificado implements Runnable {
	private int limiteContador;
	private int contadorGlobal;

	public Questao03ThreadModificado(int limiteContador, int contadorGlobal) {
		
		this.limiteContador = limiteContador;
		this.contadorGlobal = 0;
		new Thread(this).start();
	}

	@Override
	public void run() {

		for (int i = 0; i <= limiteContador; i++) {
			System.out.println("contador: " + i);
		}

	}

}
